<div class="index">
    <main>
        <img src="../images/background2.jpeg.jpg" >
        <a href="/collections/coleccion-eppur">Ver Colección</a>
    </main>
    <h2>Más Recientes</h2>
    <div class="index-products">
        {{#if products}}
            {{#each products}}
                <a href="/collections/coleccion-eppur/{{this.category}}/{{this._id}}" class="product-box">
                    <img src="../images/productos.jpg">
                    <div class="product-box-data">
                        <h4>{{this.title}}</h4>
                        <h5>${{this.price}}</h5>
                    </div>
                </a>
            {{/each}}
        {{/if}}
    </div>
