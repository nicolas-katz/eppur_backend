{{#if products}}
  {{#each products as |product|}}
    <div class="details">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="{{this.imageURL}}" class="d-block" >
        </div>
        <div class="carousel-item">
          <img src="{{this.imageURL}}" class="d-block" >
        </div>
        <div class="carousel-item">
          <img src="{{this.imageURL}}" class="d-block" >
        </div>
      </div>
    </div>
        <div class="details-content">
            <div class="details-pag">
              <a href="/collections/products/all-products">TODOS LOS PRODUCTOS <span>/</span></a>
              <a href="/collections/products/{{this.category}}">{{this.category}} <span>/</span></a>
              <a>{{this.title}}</a>
            </div>
            <h1>{{this.title}}</h1>
            <h4>COLOR PRINCIPAL: {{this.color}}</h4>
            <h2>${{this.price}}</h2>
            <label>ELEGI TU TALLE</label>
            <div class="sizes">
              {{#each this.sizes}}
              {{#if this.stock}}
                <p>{{this.size}}</p>
              {{/if}}
              {{/each}}
            </div>
            <button type="button" class="btn btn-sizes" data-bs-toggle="modal" data-bs-target="#exampleModal">
              CONSULTAR MI TALLE
            </button>
            <!-- Guia de talles -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">GUÍA DE TALLES</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    ...
                  </div>
                </div>
              </div>
            </div>
            <button class="add-to-cart">AÑADIR AL CARRITO</button>
            <div class="description">
              <h4>DESCRIPCIÓN</h4>
              <p>{{this.description}}.</p>
            </div>
        </div>
    </div>
  {{/each}}
  {{else}}
  <p class="notfound">No hemos podido encontrar el producto seleccionado. <a href="/collections">VOLVER ATRÁS</a></p>
{{/if}}