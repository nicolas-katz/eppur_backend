{{#if products}}
  {{#each products as |product|}}
    <div class="details">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="../../images/outfits.jpg" class="d-block" >
        </div>
        <div class="carousel-item">
          <img src="../../images/outfits.jpg" class="d-block" >
        </div>
        <div class="carousel-item">
          <img src="../../images/outfits.jpg" class="d-block" >
        </div>
      </div>
    </div>
        <div class="details-content">
            <div class="details-pag">
              <a href="/collections/products/all-products">TODOS LOS PRODUCTOS <span>/</span></a>
              <a href="/collections/products/{{this.category}}">{{this.category}} <span>/</span></a>
              <a>{{this.title}}</a>
            </div>
            <h1>{{this.title}}</h1>
            <h4>COLOR PRINCIPAL: {{this.color}}</h4>
            <h2>${{this.price}}</h2>
            <label>ELEGI TU TALLE</label>
            <div class="sizes">
              {{#each this.sizes as |size|}}
              <p>{{this}}</p>
              {{/each}}
            </div>
            <a href="/information/sizes">CONSULTAR MI TALLE</a>
            <button class="add-to-cart">AÑADIR AL CARRITO</button>
            <div class="description">
              <h4>DESCRIPCIÓN</h4>
              <p>{{this.description}}.</p>
            </div>
        </div>
    </div>
  {{/each}}
  {{else}}
  <p>No hemos podido encontrar el producto seleccionado.</p>
{{/if}}