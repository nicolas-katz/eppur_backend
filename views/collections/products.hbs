<div class="products">
    <h6><a href="/">Inicio</a> / {{#if isAllProducts}}Colección Eppur{{else}}<a href="/coleccion-eppur">Colección Eppur</a> / {{title}}{{/if}}</h6>
    <h1>{{#if isColor}}Color:{{/if}}{{#if isSize}}Talle:{{/if}}{{#if isCategory}}Categoría:{{/if}} {{title}}</h1>
    {{#if boolean}}
        <div class="filters">
            <h2 data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                Filtros
                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-funnel" viewBox="0 0 16 16">
                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
                </svg>
            </h2>
        </div>
        {{> offcanvasFilters}}
        <div class="{{#if boolean}}products-container {{else}}products-container active {{/if}}">
            {{#each products as |product index|}}
                <a class="product-box" href="/coleccion-eppur/{{this.category}}/{{this._id}}">
                    <img src="{{this.image}}" >
                    <div class="product-content">
                        <h4>{{this.title}}</h4>
                        <h5>${{this.price}}</h5>
                        <label>Stock Disponible: {{this.stock}}</label>
                    </div>
                </a>     
            {{/each}}
        </div>
    {{else}}
        <p class="notfound">No hay productos cargados en la web. <a href="{{#if isAllProducts}}/{{else}}/coleccion-eppur{{/if}}">Volver Atrás</a></p>
    {{/if}}
</div>